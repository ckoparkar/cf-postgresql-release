#!/bin/bash

RUN_DIR=/var/vcap/sys/run/postgresql_broker
LOG_DIR=/var/vcap/sys/log/postgresql_broker
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ >> $PIDFILE

    cd /var/vcap/packages/postgresql_broker

    export PATH=/var/vcap/packages/cf_cli_6.10.0/bin:$PATH
    echo <%= properties.cf.username %> >> $LOG_DIR/user

    ;;

  stop)

    kill -9 `cat $PIDFILE`

    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
