#!/bin/bash

set -e
set -u

CF_USERNAME=<%= properties.cf.username %>
CF_PASSWORD=<%= properties.cf.password %>
CF_DOMAIN=<%= properties.cf.domain %>
CF_API="https://api.sys.$CF_DOMAIN"
export PATH=$PATH:/var/vcap/packages/cf_cli_6.10.0/bin

cf api $CF_API
cf auth $CF_USERNAME $CF_PASSWORD

cf purge-service-offering postgresql-db -f
cf delete-service-broker postgresql-broker -f

cf target -o system -s postgrsql-broker
cf delete postgresql-broker-app -f
cf delete-space postgresql-broker -f

exit 0
